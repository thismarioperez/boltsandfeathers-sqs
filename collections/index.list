<article class="index-page--{collection.id} cms" data-collection-id="{collection.id}">
  {.section collection}
    {.repeated section collections}
      <article{.section mainImage}{.or} data-controller="AccountForHeader"{.end}>
      {.section mainImage}
        {@|apply _banner.block}
      {.end}
        <section class="index-section index-section--{id} -wrapper -limitter -space-t -space-b" data-collection-id="{id}">
          {mainContent}
        </section>
      </article>
    {.end}
  {.end}
</article>