<article class="index index--{collection.id} cms" data-collection-id="{collection.id}">
  {.section collection}
    {.repeated section collections}
      <article class="index--section index--section--{id}" {.section mainImage}{.or} data-controller="AccountForHeader"{.end}>
      {.background-source-video?}
        {@|apply _banner.block}
      {.or}{.section mainImage}
        {@|apply _banner.block}
      {.end}{.end}
        <section class="index--content -wrapper -limitter -space-t -space-b" data-collection-id="{id}">
          {mainContent}
        </section>
      </article>
    {.end}
  {.end}
</article>