{.section item}
<div class="blog blog-item -wrapper -limitter -space-b" data-controller="AccountForHeader, AnimateController, ImageController">
<div class="blog-inner">
  <div class="blog-item-back-link">
    <p><a href="{collection.fullUrl}">‚Üê Back to all posts</a></p>
  </div>

  {.main-image?}
  <section class="blog-item-banner has-main-image">
    <div class="blog-item-banner-image content-fit" data-controller="SetupBlogItemImage"><img {@|image-meta} data-load="false" data-item-banner/></div>
  </section>
  {.end}

  <div class="main-content blog-view-item clearfix">
    <article id="article-{id}" class="entry--item h-entry clearfix {@|item-classes}">
      <div class="blog-item-content-wrapper">
        <div class="blog-item-title">
          <h2 class="entry-title entry-title--large p-name" itemprop="headline" data-content-field="title">{title}</h2>
          <time class="dt-published date-callout" datetime="{addedOn|date %F}" pubdate>
            <div class="date-wrapper">
              <span class="month">{addedOn|date %B} </span><span class="day">{addedOn|date %e}</span>, <span class="year">{addedOn|date %G}</span>
            </div>
          </time>
        </div>
        <div class="blog-item-content e-content">{.section body}{@}{.end}</div>

        <footer class="blog-item-footer">

          <div class="footer-meta">
          {.section author}
            <div class="blog-meta-item blog-meta-author">Author: <a href="{collection.fullUrl}?author={author.id}" class="blog-author-name">{displayName}</a></div>
          {.end}

          {.section categories}
            <div class="blog-meta-item blog-categories">Categorized as: {.repeated section @}<a href="{collection.fullUrl}?category={@|url-encode}" class="blog-category blog-category--{@}">{@}</a>{.alternates with}<span class="blog-meta-delimiter">, </span>{.end}</div>
          {.end}

          {.section tags}
            <div class="blog-item-tags">
              Tagged in: {.repeated section @}<a href="{collection.fullUrl}?tag={@|url-encode}" class="blog-item-tag blog-item-tag--{@|slugify}" rel="tag">{@}</a>{.alternates with}<span class="blog-meta-delimiter">, </span>{.end}
            </div>
          {.end}
          </div>

          <div class="blog-item-actions blog-item-actions--footer">
            <div class="blog-item-actions-wrapper">
              <div class="blog-item-action">
                {@|like-button}
              </div>
              <div class="blog-item-action">
                {@|social-button}
              </div>
            </div>
          </div>

        </footer>

        {.if postItemInjectCode}<div class="blog-item-injection">{postItemInjectCode}</div>{.end}

        <input id="show-comments" type="checkbox" />

        <section class="blog-item-comments">
          <div class="blog-item-comments-toggle-wrapper">
            <label for="show-comments" title="Show/Hide Comments" class="blog-item-comments-toggle">
              {.comments?}
                {.if websiteSettings.disqusShortname}Leave a comment
                {.or}
                  {.section publicCommentCount}Show {@} comment{@|pluralize}
                  {.or}Leave a comment
                  {.end}
                {.end}
              {.end}</label>
            <div id="blogItemCommentsContent" class="blog-item-comments-content">
              {.comments?}
              <div id="comments-{id}" class="p-comment">
                {@|comments}
              </div>
              {.end}
            </div>
          </div>
        </section>

{.end}{#ends opening .section item}

        {.section pagination}
        <section class="blog-item-pagination">
          {.section prevItem}<a href="{fullUrl}" class="blog-item-pagination-link blog-item-pagination-link--prev">
            <div class="blog-item-label">
              <svg class="prev-icon" viewBox="0 0 50 100">
                <use xlink:href="/assets/ui-icons.svg#thick-arrow-left-icon"></use>
              </svg>
            </div>
            <span class="pagination-title-wrapper">
              <h2 class="blog-item-pagination-title"><time class="dt-published date-pagination" datetime="{addedOn|date %F}" pubdate>{addedOn|date %b %e} </time>{title}</h2>
            </span>
          </a>{.or}{.end}<!--
          -->{.section nextItem}<a href="{fullUrl}" class="blog-item-pagination-link blog-item-pagination-link--next">
            <div class="blog-item-label">
              <svg class="next-icon" viewBox="0 0 50 100">
                <use xlink:href="/assets/ui-icons.svg#thick-arrow-right-icon"></use>
              </svg>
            </div>
            <span class="pagination-title-wrapper">
              <h2 class="blog-item-pagination-title"><time class="dt-published date-pagination" datetime="{addedOn|date %F}" pubdate>{addedOn|date %b %e} </time>{title}</h2>
            </span>
          </a>{.or}{.end}
        </section>
        {.end}

      </div>

    </article>
  </div>

</div>
