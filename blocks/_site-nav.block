<ul class="site-nav" data-content-field="navigation-site-nav">
  {.repeated section items}
    <li class="site-nav--item">
      {.folder?}
        <a class="h1" href="{collection.fullUrl}">{collection.navigationTitle}</a>

        <ul class="site-nav--folder">
          {.repeated section items}
            <li class="site-nav--folder-item">
              {.collection?}
                <a class="{.if active} is-active{.end}" href="{collection.fullUrl}">
                  {collection.navigationTitle}
                </a>
              {.end}
              {.section externalLink}
                <a href="{url}"{.section newWindow} target="_blank"{.end}>
                  {title}
                </a>
              {.end}
            </li>
          {.end}
        </ul>

      {.or}

        {.section collection}
          <a class="h1{.if active} is-active{.end}" href="{fullUrl}">{navigationTitle}</a>
        {.end}

        {.section externalLink}
          <a class="h1" href="{url}"{.section newWindow} target="_blank"{.end}>
            {title}
          </a>
        {.end}

      {.end}
    </li>
  {.end}
</ul>
