<header class="header wrapper">
  <div class="header--inner">
    {#  logo  }
    {.section website}
    <h1>
      <a class="logo" href="/">
        {@|apply _logo.block}
      </a>
    </h1>
    {.end}
    {#  page title  }
    <h1>
      <span class="page-title">
        <span>{collection.title}</span>
      </span>
    </h1>
    {#  menu toggle  }
    <div class="menu">
      <span class="icon icon--menu"><span></span></span>
    </div>
  </div>
</header>